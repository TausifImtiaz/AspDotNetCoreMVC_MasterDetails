@model AspDotNetCore_MasterDetails.Models.Applicant

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="text-center bg-danger py-3">
        <h1 class="text-white">Are you sure you want to delete this?</h1>
    </div>

    <div class="card mt-3">
        <div class="card-header bg-primary text-white">
            <h4>Delete Applicant</h4>
        </div>

        <form id="deleteForm" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <input asp-for="Gender" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Age" class="control-label">Age</label>
                            <input asp-for="Age" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Qualification" class="control-label">Qualification</label>
                            <input asp-for="Qualification" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TotalExperience" class="control-label">Total Experience</label>
                            <input asp-for="TotalExperience" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ProfilePhoto" class="control-label">Profile Photo</label>
                            <img src="~/Images/@Model.PhotoUrl" class="img-thumbnail" width="80" height="80" />
                        </div>
                    </div>

                    <div class="col-md-12">
                        <h3>Experiences</h3>
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Company Name</th>
                                    <th>Designation</th>
                                    <th>Years Worked</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var experience in Model.Experience)
                                {
                                    <tr>
                                        <td>@experience.CompanyName</td>
                                        <td>@experience.Designation</td>
                                        <td>@experience.YearsWorked</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="col-md-12">
                        <div class="btn-group">
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
